<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension
          point="org.eclipse.ui.views">
       <view
             allowMultiple="true"
             category="msi.gama.gui.category.gama"
             class="ummisco.gama.display.opengl.view.OpenGLDisplayView"
             icon="platform:/plugin/ummisco.gama.ui.shared/icons/view.display2.png"
             id="ummisco.gama.application.view.OpenGLDisplayView"
             name="3D"
             restorable="false">
       </view>
    </extension>    
    <extension
          point="org.eclipse.ui.services">
       <serviceFactory
             factoryClass="ummisco.gama.display.opengl.view.OpenGLInitializer">
          <service
                serviceClass="ummisco.gama.ui.interfaces.IOpenGLInitializer">
          </service>
       </serviceFactory>
    </extension>
    <extension
          point="gama.display">
       <implementation
             class="ummisco.gama.display.opengl.view.SWTOpenGLDisplaySurface"
             keyword="opengl">
       </implementation>
    </extension>
</plugin>
